<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="25dp"
            android:background="@android:color/white">


            <ImageView
                android:id="@+id/beranda"
                android:tint="#ff000000"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:src="@drawable/logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:textColor="@color/login_text_col"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="Pelaporan Sampah"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="90dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/urlGambar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="82dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@+id/btnGambar" />
                    <!--android:layout_margin="5dp"-->
                    android:inputType="text"
                    android:hint="Plih Gambar..."
                    android:layout_alignParentLeft="true"/>

                <Button
                    android:id="@+id/btnGambar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/ic_camera_alt_black_24dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plilih Lokasimu   : "
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="208dp"
                android:layout_gravity="center"
                android:background="#008477">

                <org.osmdroid.views.MapView
                    android:id="@+id/maps"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Sampah   : "
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/jenis_sampah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#008477" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Deskripsi Sampah   : "
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/textArea_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4eded"
                android:layout_marginTop="5dp"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:padding="5dp"
                android:lines="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:scrollHorizontally="false"
                android:hint="Deskripsi...."
                android:textColor="#111"/>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="#008477"
                android:layout_gravity="right"/>

        </LinearLayout>

    </ScrollView>




</android.support.constraint.ConstraintLayout>